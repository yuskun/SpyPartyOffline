.top-left-ui {
    position: absolute;
    top: 30px; left: 30px;
    flex-direction: column;
    align-items: flex-start;
    z-index: 50;
}

.back-pill-btn {
    flex-direction: row;
    align-items: center;
    padding: 0 14px;
    height: 44px;
    border-radius: 22px;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/back_default.png");
    border-width: 0;
    margin-bottom: 14px;
    transition-property: scale, translate;
    transition-duration: 0.12s;
}
.back-arrow { font-size: 18px; color: white; margin-right: 5px; }
.back-label { font-size: 16px; color: white; -unity-font-style: bold; }

.back-pill-btn:hover {
    scale: 1.05;
    translate: 0 -2px;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/back_hover.png");
}
.back-pill-btn:active {
    scale: 0.98;
    translate: 0 2px;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/back_active.png");
}

