.mission-panel { flex-direction: column; }

.mission-task {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 150px;
    height: 40px;
    margin-bottom: 12px;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/default-t2.png");
    overflow: hidden;
    /* è®Šå½¢åŸé»è¨­ç‚ºå·¦ä¸Š */
    transform-origin: left top;
    transition-property: width, height, scale, background-color;
    transition-duration: 0.3s;
}

/* å±•é–‹ç‹€æ…‹ */
.mission-task.active {
    width: 280px;
    height: 50px;
    scale: 1.05;
    padding: 0;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/active-t2.png");
}

.task-left {
    flex-direction: row;
    align-items: center;       /* âœ… ç¢ºä¿æ¨™é¡Œèˆ‡æè¿°åœ¨åŒä¸€æ¢æ°´å¹³ç·šä¸Š */
    height: 100%;              /* æ’æ»¿é«˜åº¦ä»¥ä¾¿å°é½Š */
    padding: 0; /* ç¢ºä¿é€™è£¡æ²’æœ‰ left padding */
    margin: 0;
    flex-shrink: 0;
}

.task-title {
    height: 100%;
    margin: 0;
    padding: 0 12px;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/default-t.png");
    color: white;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    font-size: 18px;
}

.task-desc {
    font-size: 15px;
    color: #5F7F8D;
    margin-left: 8px;
    opacity: 0;
    width: 0;
    transition-property: opacity, width;
    transition-duration: 0.2s;
}

.mission-task.active .task-desc { opacity: 1; width: auto; }

.task-progress {
    padding-right: 10px;
    color: #4F7F8D;
    -unity-font-style: bold;
}

