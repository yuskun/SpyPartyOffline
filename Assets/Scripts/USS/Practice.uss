.top-right-menu {
    position: absolute;
    top: 30px; right: 30px;
}

.menu-btn {
    width: 200px; height: 70px;
    border-radius: 30px;
    border-width: 0;
    color: white; font-size: 28px; -unity-font-style: bold;
    background-image: url("project://database/Assets/Image/UIPanel/Practice/blue_default.png");

    transition-property: scale, translate;
    transition-duration: 0.12s;
}

.menu-btn:hover { scale: 1.05; translate: 0 -3px; background-image: url("project://database/Assets/Image/UIPanel/Practice/blue_hover.png"); }
.menu-btn:active { scale: 0.98; translate: 0 2px; background-image: url("project://database/Assets/Image/UIPanel/Practice/blue_active.png");}

/* =========================================
   ğŸ‘¤ å³ä¸‹è§’ HUD (èˆ‡ä¹‹å‰ç‰ˆæœ¬ä¸€è‡´)
   ========================================= */
.hud-bottom {
    position: absolute;
    bottom: 18px;
    right: 18px;
    align-items: flex-end;
}

.playerbar {
    width: 300px;
    height: 80px;
    flex-direction: row;
    align-items: center;
    padding: 10px 14px;
    border-radius: 40px;
    background-color: rgba(246, 235, 207, 0.95);
    border-width: 2px;
    border-color: rgba(255,255,255,0.8);
}

.avatar-wrap { width: 52px; height: 52px; margin-right: 14px; }
.avatar {
    width: 100%; height: 100%;
    border-radius: 26px;
    border-width: 3px;
    border-color: rgba(255,255,255,0.9);
    background-image: url("project://database/Assets/Image/Character/Shaya.png");
    -unity-background-scale-mode: scale-and-crop;
}

.player-meta { flex-grow: 1; justify-content: center; }
.player-name { font-size: 16px; -unity-font-style: bold; color: #8b6a2b; margin-bottom: 6px; }

.level-line { flex-direction: row; align-items: center; }
.level-bubble {
    width: 26px; height: 26px; border-radius: 13px;
    background-color: #4fc7ff; border-width: 2px; border-color: rgba(255,255,255,0.9);
    color: #ffffff; font-size: 12px; -unity-font-style: bold; -unity-text-align: middle-center;
    margin-right: -10px; z-index: 2;
}

.level-track { width: 120px; height: 10px; background-color: #ffffff; border-radius: 5px; overflow: hidden; }
.level-fill { height: 100%; background-color: #3fafff; border-radius: 5px; }

.icon-btn {
    width: 38px; height: 38px; border-radius: 15px;
    background-color: #ffffff; border-width: 0;
    align-items: center; justify-content: center;
}
.mic-icon { width: 20px; height: 20px; display: none; }
.mic-btn.is-open .mic-open { display: flex; background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/mic-open.png"); }
.mic-btn.is-off .mic-off { display: flex; background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/mic-off.png"); }