/* Slot æ ¼å­ */

.slot {

    width: 185px; /* (420 - 40padding - 10gap)/2 */

    height: 70px;

    margin-bottom: 15px;

    

    flex-direction: row;

    align-items: center;

    justify-content: center;

    

    border-width: 0;

    background-color: rgba(0,0,0,0);

    

    background-image: url("project://database/Assets/Image/UIPanel/HostRoom/player_default.png");

    

