.back-pill {
    position: absolute;
    top: 30px;
    left: 30px;
    width: 100px;
    height: 44px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    border-radius: 22px;
    border-width: 0;
    background-color: rgba(0,0,0,0);
    background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/back_default.png");
    transition-property: scale, translate;
    transition-duration: 0.12s;
}

.back-arrow { font-size: 18px; color: white; margin-right: 5px; }
.back-label { font-size: 16px; color: white; -unity-font-style: bold; }

.back-pill:hover {
    scale: 1.05;
    translate: 0 -2px;
    background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/back_hover.png");
}
.back-pill:active {
    scale: 0.98;
    translate: 0 2px;
    background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/back_active.png");
}

