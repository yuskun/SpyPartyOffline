.container {
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
}

.room-actions { align-items: center; }
.room-main { flex-direction: row; }

.jelly-btn {
    border-width: 0;
    background-color: rgba(0,0,0,0);
    transition-property: scale, translate;
    transition-duration: 0.12s;
}
.jelly-btn:hover { scale: 1.05; translate: 0 -2px; }
.jelly-btn:active { scale: 0.98; translate: 0 2px; }

.cute-btn {
    width: 250px;
    height: 250px;
    margin: 0 14px;
}

.cute-btn.vertical {
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* ğŸŸ¦ è—è‰²èˆ‡ç²‰è‰² */
.cute-btn.blue { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/blue_default.png"); }
.cute-btn.blue:hover { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/blue_hover.png"); }
.cute-btn.blue:active { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/blue_active.png"); }

.cute-btn.pink { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/pink_default.png"); }
.cute-btn.pink:hover { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/pink_hover.png"); }
.cute-btn.pink:active { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/pink_active.png"); }

.btn-text {
    font-size: 50px;
    color: #ffffff;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    margin-bottom: 10px;
    -unity-paragraph-spacing: 28px;
}

.btn-icon { width: 36px; height: 36px; -unity-background-scale-mode: scale-to-fit; }
.icon-room { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/icon_room.png"); } 
.icon-join { background-image: url("project://database/Assets/Image/UIPanel/CreateRoom/icon_join.png"); } 

